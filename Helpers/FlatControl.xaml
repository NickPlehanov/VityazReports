<UserControl x:Class="VityazReports.Helpers.FlatControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VityazReports.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="{Binding ImageSource, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
               Stretch="UniformToFill" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
        <TextBlock Grid.Row="1" TextAlignment="Center" Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
        <Grid.InputBindings>
            <MouseBinding Gesture="LeftClick" Command="{Binding ClickCommand}" CommandParameter="{Binding Text}"/>
        </Grid.InputBindings>
    </Grid>
</UserControl>
