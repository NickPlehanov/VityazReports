<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="VityazReports.Views.GuardObjectsOnMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VityazReports.Views" 
                  xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
                  xmlns:vm="clr-namespace:VityazReports.ViewModel" 
                  xmlns:command="http://www.galasoft.ch/mvvmlight" 
                  xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                  mc:Ignorable="d"
        Title="Охраняемые объекты на карте" Height="450" Width="800">
    <mah:MetroWindow.DataContext>
        <vm:GuardObjectsOnMapGBRViewModel/>
    </mah:MetroWindow.DataContext>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Command="{Binding ShowGroups}">
                <iconPacks:BootstrapIcons Kind="FilterCircle"/>
            </Button>
            <Button>
                <iconPacks:BootstrapIcons Kind="PieChart"/>
            </Button>
            <Button>
                <iconPacks:BootstrapIcons Kind="Bucket"/>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <Grid>
        <mah:Flyout Width="150" Position="Right" IsModal="True" AnimateOpacity="True" IsOpen="{Binding FlyoutShowGroupsVisibleState}" Panel.ZIndex="1">
            <StackPanel>
                <ListBox ItemsSource="{Binding ObjectTypeList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ToggleButton Margin="5" Content="{Binding ObjTypeName}" Tag="{Binding ObjTypeId}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </mah:Flyout>
        <UserControl Content="{Binding gmaps_contol}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseRightButtonDown">
                    <command:EventToCommand Command="{Binding Mode=OneWay, Path=MouseRightButtonDownCommand}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </UserControl>
    </Grid>
</mah:MetroWindow>
